#Application Manifest 

apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
	name: onix-digital
spec:
	Destinatination:
	server: 'https://127.0.0.1:42303/applications'
	namespace: default
project: default
source:
	repoURL: https://github.com/HemanthVarun/Assignment-repo
	targetRevision: main
	path: /Argocd. file
	syncPolicy:
		automated:
  			prune: true
			selfHeal: true



#Synced Service Manifest (service.yaml):

apiVersion: v1
kind: Service
metadata:
  name: onix-digital-service
  labels:
    app: onix-digital
    app.kubernetes.io/part-of: webapp
    app.kubernetes.io/managed-by: argocd
spec:
  ports:
    - port: 80
      targetPort: 80



#Ingress Manifest (ingress.yaml)

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: onix-digital-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - host: aizensoske.online   # my domain name
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: onix-digital-service
                port:
                  number: 80
