#Application Manifest 

apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
	name: onix-digital
spec:
	Destinatination:
	server: 'https://localhost:8443'
	namespace: default
project: default
source:
	repoURL: <YOUR_GITHUB_REPO_URL>
	targetRevision: HEAD
	path: /onix-digital
	helm:
  		valueFiles:
    		- values.yaml   # Optional: if you have custom Helm values
	syncPolicy:
		automated:
  			prune: true
			selfHeal: true



#Synced Service Manifest (service.yaml):

apiVersion: v1
kind: Service
metadata:
  name: onix-digital-service
  labels:
    app: onix-digital
    app.kubernetes.io/part-of: webapp
    app.kubernetes.io/managed-by: argocd
spec:
  ports:
    - port: 80
      targetPort: 80
  selector:
    app: onix-digital



#Ingress Manifest (ingress.yaml)

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: onix-digital-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - host: yourdomain.com   # Replace with your domain name
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: onix-digital-service
                port:
                  number: 80
